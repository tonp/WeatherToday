{
  "manifest_version": 2,

  "name": "WeatherToday",
  "description": "This extension display weather information given user location",
  "version": "1.0",

  "browser_action": {
    "default_icon": "wt128.png",  
    "default_popup": "popup.html" 
  },
  "icons":{
    "16": "wt16.png", 
    "48": "wt48.png",
    "128": "wt128.png"
  },
  "permissions": ["https://ajax.googleapis.com/", 
    "storage"
  ], 
  "background":{
    "scripts": ["eventPage.js"], 
    "persistent": false
  }
}
